 "html": "<!DOCTYPE html>\r\n<html>\r\n<head>\r\n    <title>Purchase Invoice</title>\r\n    <link href=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css\" rel=\"stylesheet\">\r\n    <style>\r\n        .print-format {\r\n            padding: 40px;\r\n            font-size: 14px;\r\n        }\r\n        .print-format .row:not(.section-break) {\r\n            line-height: 1.6;\r\n            margin-top: 0px !important;\r\n        }\r\n\r\n        .table,\r\n        .table th,\r\n        .table td {\r\n            border: 1px solid black;\r\n        }\r\n\r\n        .table th,\r\n        .table td {\r\n            padding: 8px;\r\n            text-align: left;\r\n        }\r\n\r\n        .text-center {\r\n            text-align: center;\r\n        }\r\n\r\n        .header-section h4,\r\n        .header-section p {\r\n            margin: 0;\r\n        }\r\n\r\n        .footer {\r\n            display: flex;\r\n            justify-content: space-between;\r\n        }\r\n\r\n        .footer div {\r\n            flex: 1;\r\n        }\r\n\r\n        .signature {\r\n            display: flex;\r\n            justify-content: space-between;\r\n            margin-top: 40px;\r\n        }\r\n\r\n        .bold {\r\n            font-weight: bold;\r\n        }\r\n        \r\n        .invoice-info,\r\n        .buyer-info,\r\n        .consignee-info {\r\n            border: 1px solid black;\r\n            padding: 5px;\r\n        }\r\n\r\n        .invoice-info td {\r\n            padding: 5px;\r\n        }\r\n\r\n        .buyer-info,\r\n        .consignee-info {\r\n            width: 50%;\r\n            float: left;\r\n        }\r\n\r\n        .buyer-info {\r\n            border-right: 0;\r\n        }\r\n\r\n        .consignee-info {\r\n            border-left: 0;\r\n        }\r\n\r\n        .border {\r\n            border: 1px solid black;\r\n        }\r\n        .text-small{\r\n            font-size:8px;\r\n            margin-top:0px;\r\n            padding-top:0px;\r\n            \r\n        }\r\n        \r\n        .border-right {\r\n            border-right: 1px solid black !important;\r\n        }\r\n\r\n        .border-left {\r\n            border-left: 1px solid black !important;\r\n        }\r\n        \r\n        .border-top {\r\n            border-top: 1px solid black !important;\r\n        }\r\n\r\n        .border-bottom {\r\n            border-bottom: 1px solid black !important;\r\n        }\r\n        .border {\r\n            border: 1px solid black !important;\r\n        }\r\n        \r\n    </style>\r\n</head>\r\n\r\n<body>\r\n    <div class=\"text-center\">\r\n        <!-- Header Section -->\r\n        <h4><b>Sales Invoice</b></h4>\r\n    \r\n        </div>\r\n        <!-- top -->\r\n        <div class=\"row border\">\r\n        <div class=\"row px-0 mx-0 mb-0 text-center\">\r\n            <img src=\"https://njie.royalsmb.com/files/Screenshot%20from%202024-10-19%2017-57-01.png\"> \r\n        </div>\r\n        <div class=\"row   px-0 mx-0\">\r\n            <div class=\"col-8 border-top border-bottom\">\r\n                <p><b>Customer Name :</b> {{frappe.db.get_value(\"Customer\", doc.customer, \"customer_name\")}}</p>\r\n                <p><b>Payment Status :</b> {{doc.status}}</p>\r\n                <!--<p><b>Division :</b> 7 (Navsari)</p>-->\r\n                <!--<p><b>PAN No :</b> AADCS9508D</p>-->\r\n                \r\n            </div>\r\n                        <div class=\"col-4 border-top border-left border-bottom\">\r\n                            <p><b>Invoice No. :</b> {{ doc.name[4:] }}</p>\r\n                            <p><b>Date :</b> {{ doc.posting_date }}</p>\r\n                            \r\n\r\n            </div>\r\n            \r\n\r\n        </div>    \r\n\r\n        <!-- Table Section -->\r\n        <table class=\"table mt-4\">\r\n    <thead>\r\n        <tr>\r\n            <th><b>Sr. No.</b></th>\r\n            <th><b>Description of Goods</b></th>\r\n            <th><b>Qty </b></th>\r\n            <th><b>Rate </b></th>\r\n            <th><b>Amount</th>\r\n           \r\n    </thead>\r\n    <tbody>\r\n        {% for item in doc.items %}\r\n        <tr>\r\n            <td>{{ loop.index }}</td>\r\n            <td>{{ item.item_code }}</td>\r\n            \r\n            <td>{{ item.qty }}</td>\r\n            <td>{{ item.rate }}</td>\r\n            <td>{{ item.amount }}</td>\r\n        </tr>\r\n        {% endfor %}\r\n    </tbody>\r\n</table>\r\n\r\n           <!-- Totals Section -->\r\n    \r\n\r\n        <!-- Grand Total Section -->\r\n        <div class=\"row   px-0 mx-0\">\r\n            <div class=\"col-4 \">\r\n                <p><b>Total Qty: </b>{{doc.total_qty}}</p>\r\n            </div>\r\n            <div class=\"col-8  text-end\">\r\n                <div>\r\n                    <p>Total: {{ doc.get_formatted(\"total\")  }}</p>\r\n                  <p>Grand Total: {{ doc.get_formatted(\"grand_total\") }}</p>\r\n                  <p>Outstanding Amount: {{ doc.get_formatted(\"outstanding_amount\")  }}</p><br>\r\n                  \r\n                   <p><b>In Words :</b> {{ doc.in_words }}</p>\r\n                </div>\r\n            </div>\r\n        </div>\r\n\r\n        <!-- Footer Section -->\r\n\r\n        <!-- Signature Section -->\r\n        <div class=\"row mt-4\">\r\n            <div class=\"col text-center\">\r\n            </div>\r\n            <div class=\"col text-center\">\r\n                <BR>\r\n                <BR>\r\n                <BR>\r\n                <P>Authorised Signatory</P>\r\n                <P>(Signature of Licensee or his Authorised Agent)</P>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</body>\r\n\r\n</html>",
